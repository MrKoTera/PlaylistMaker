<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background_primary"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:paddingBottom="40sp"
        android:text="@string/app_name" />

    <Button
        android:id="@+id/buttonSearch"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:backgroundTint="#ffffff"
        android:drawablePadding="@dimen/main_buttons_padding"
        android:text="@string/button_search"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/main_buttons_text"
        app:cornerRadius="@dimen/main_buttons_corner"
        app:icon="@drawable/search"
        app:iconGravity="textStart"
        app:iconTint="@android:color/black" />
    <Button
        android:id="@+id/buttonMedia"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:backgroundTint="#ffffff"
        android:drawablePadding="@dimen/main_buttons_padding"
        android:text="@string/button_media"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/main_buttons_text"
        app:cornerRadius="@dimen/main_buttons_corner"
        app:icon="@drawable/media"
        app:iconGravity="textStart"
        app:iconTint="@android:color/black" />
    <Button
        android:id="@+id/buttonSettings"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:backgroundTint="#ffffff"
        android:drawablePadding="@dimen/main_buttons_padding"
        android:text="@string/button_settings"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/main_buttons_text"
        app:cornerRadius="@dimen/main_buttons_corner"
        app:icon="@drawable/settings"
        app:iconGravity="textStart"
        app:iconTint="@android:color/black" />
</LinearLayout>